<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mbga_startup_progress"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="#FFFFFF" >
    
    <RelativeLayout
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:id="@+id/image_wrapper"
    	android:background="#FFFFFF"
    	android:layout_centerInParent="true"
        >
    <ImageView
        android:id="@+id/splash_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/mbga_content_description"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:id="@+id/spinner_wrapper"
    	android:background="#FFFFFF"
    	android:layout_alignParentBottom="true"
    	android:layout_centerHorizontal="true"
        >
    <TextView
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:id="@+id/splash_textview"
    	android:textStyle="bold"
    	android:text="@string/mbga_initialize"
    	android:background="#FFFFFF"
    	android:textColor="#646464"
    	android:textSize="16sp"
    	android:gravity="center"/>
    
    <ProgressBar
    	android:id="@+id/mobage_spinner"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/splash_textview"
    	android:layout_centerHorizontal="true"
    	style="@android:style/Widget.ProgressBar.Small" />
    </RelativeLayout>
</RelativeLayout>